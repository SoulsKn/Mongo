{{#if tasks}}
  <table class="table table-bordered table-hover table-dark">
    <thead>
      <tr>
        <th>NÂ°</th>
        <th>Titulo</th>
        <th>Descripcion</th>
        <th>Operacion</th>
      </tr>
    </thead>
    <tbody>
      {{#each tasks}}
        <tr>
          <td>{{@index}}</td>
          <td><strong>{{title}}</strong></td>
          <td>{{description}}</td>
          <td>
            {{#if done}}
              <a
                class="btn btn-success"
                href="/tasks/{{_id}}/toggleDone"
              >Listo</a>
            {{else}}
              <a class="btn btn-dark" href="/tasks/{{_id}}/toggleDone">
                SinTerminar
              </a>
            {{/if}}
            <a href="/tasks/{{_id}}/delete" class="btn btn-danger">
              Eliminar
            </a>
            <a href="/tasks/{{_id}}/edit" class="btn btn-info">
              Editar
            </a>
          </td>
        </tr>
      {{/each}}
    </tbody>
  </table>
{{else}}
{{/if}}